<!-- 404.html -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>404 - Page Not Found</title>
  <style>
    .preloader {
      display: flex;
      align-items: center;
      justify-content: center;
      background: white;
      height: 100vh;
      width: 100%;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 100;
    }
    .preloader img {
      max-width: 50%;
      height: auto;
    }

    @media (max-width: 768px) {
    .preloader img {
      max-width: 100%;
      height: auto;
    }
}
  </style>
</head>
<body>
  <div class="preloader">
    <img src="img/404Error.gif" alt="Loading">
  </div>
</body>
</html>